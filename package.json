{
  "name": "labo-string",
  "version": "1.0.0",
  "description": "Questo progetto fornisce una base per una semplice Command-Line Interface (CLI) Node.js che offre diverse utilit√† per la manipolazione di stringhe.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest --coverage --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VicEnri/ssgs-lab2.git"
  },
  "keywords": [
    "cli",
    "string",
    "utility",
    "nodejs"
  ],
  "homepage": "https://github.com/VicEnri/ssgs-lab2#readme",
  "author": "enrico vicale <enricovicale99@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VicEnri/ssgs-lab2/issues"
  },
  "devDependencies": {
    "jest": "^30.0.4"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!src/index.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "directories": {
    "test": "tests"
  }
}
